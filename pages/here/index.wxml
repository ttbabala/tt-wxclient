<view>
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 100%; height: 260px;"></map>
</view>

<view class="section">
  您所在的地点名称<input type="text" placeholder="{{locationName}}" auto-focus/>
</view>
<view class="section">
  详细位置<input type="text" placeholder="{{locationAddress}}" auto-focus/>
</view>
<view class="section">
  <label>现场图片&视频</label><view style="font-size:25rpx;color:#8B8B8B;height:32px;line-height:32px;">您还未上传任何图片或视频...</view><label><button type="primary" size="mini" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary" style="margin-right:10px;">现在上传图片</button>
  <button type="primary" size="mini" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary">现在上传视频</button></label>
</view>
<view class="section">
  说点什么<textarea bindblur="bindTextAreaBlur" auto-height placeholder="说点什么吧，好让小伙伴们更清楚现场状况..." style="font-size:25rpx;color:#8B8B8B;"/>
</view>
<view class="section">
  <button type="primary" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary" style="margin-right:10px;margin-top:10px">马上发布</button>
</view>